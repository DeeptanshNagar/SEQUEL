-- Create database
CREATE DATABASE university;
USE university;

-- Create student table
CREATE TABLE student (
    id INT PRIMARY KEY,
    name VARCHAR(50)
);

INSERT INTO student (id, name) VALUES
(101, 'adam'),
(102, 'bob'),
(103, 'casey');

-- Create course table
CREATE TABLE course (
    id INT PRIMARY KEY,
    course VARCHAR(50)
);

INSERT INTO course (id, course) VALUES
(102, 'english'),
(105, 'math'),
(103, 'science'),
(107, 'computer science');

-- ================== JOINS ==================

-- INNER JOIN aka regular join
SELECT s.id, s.name, c.course
FROM student AS s
INNER JOIN course AS c
ON s.id = c.id;

-- LEFT JOIN
SELECT s.id, s.name, c.course
FROM student AS s
LEFT JOIN course AS c
ON s.id = c.id;

-- RIGHT JOIN
SELECT s.id, s.name, c.course
FROM student AS s
RIGHT JOIN course AS c
ON s.id = c.id;

-- FULL OUTER JOIN (MySQL method)
SELECT s.id, s.name, c.course
FROM student AS s
LEFT JOIN course AS c
ON s.id = c.id

UNION

SELECT s.id, s.name, c.course
FROM student AS s
RIGHT JOIN course AS c
ON s.id = c.id;

-- LEFT EXCLUSIVE JOIN (only in student)
SELECT s.id, s.name, c.course
FROM student AS s
LEFT JOIN course AS c
ON s.id = c.id
WHERE c.id IS NULL;

-- RIGHT EXCLUSIVE JOIN (only in course)
SELECT s.id, s.name, c.course
FROM student AS s
RIGHT JOIN course AS c
ON s.id = c.id
WHERE s.id IS NULL;

-- FULL EXCLUSIVE JOIN (only in one table, not both)
SELECT s.id, s.name, c.course
FROM student AS s
LEFT JOIN course AS c
ON s.id = c.id
WHERE c.id IS NULL

UNION

SELECT s.id, s.name, c.course
FROM student AS s
RIGHT JOIN course AS c
ON s.id = c.id
WHERE s.id IS NULL;

CREATE TABLE employee (
	id INT PRIMARY KEY,
    name VARCHAR(50),
    manager_id INT
);

INSERT INTO employee (id, name, manager_id)
VALUES
(101, "adam", 103),
(102, "bob", 104),
(103, "casey", NULL),
(104, "donald", 103);

SELECT *
FROM employee;

SELECT * 
FROM employee as a
JOIN employee as b
ON a.id = b.manager_id;

SELECT a.name as manager_name, b.name
FROM employee as a
JOIN employee as b
ON a.id = b.manager_id;
