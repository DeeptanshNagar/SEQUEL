SHOW DATABASES;
SHOW TABLES;

-- LECTURE 45 MIN
DROP TABLE student;

CREATE TABLE student (
	rollno INT PRIMARY KEY,
    name VARCHAR(50)
);

SELECT * FROM student;

INSERT INTO student
(rollno, name)
VALUES
(101, "karan"),
(102, "arjun"),
(103, "ram");

-- Not so good syntax for inserting 1 record.
INSERT INTO student
(rollno, name)
VALUES
(100, "kunal");

INSERT INTO student
(rollno, name)
VALUES
(105, "raghav");

-- Deleting a record
DELETE FROM student
WHERE rollno = 104;

DELETE FROM student
WHERE rollno = 105;

-- good syntax for inserting 1 record.
INSERT INTO student VALUES (104, "shyam");
